	<!-- 프로젝트 디비연결 객체생성 세팅용.-->
   <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
      <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"></property> <!-- 1단계,2단계 드라이버불러오고,객체생성 단계 -->
